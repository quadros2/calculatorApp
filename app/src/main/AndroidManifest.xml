<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firstapp.calculatorapp">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Calculator - Hide Notes in Private Cloud Vault"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name="com.firstapp.calculatorapp.MainActivity"
            android:theme="@style/Theme.AppCompat"
            android:label="Calculator">
        </activity>
        <activity android:name="com.firstapp.calculatorapp.CreateNoteActivity"></activity>
        <activity android:name="com.firstapp.calculatorapp.VaultActivity"></activity>
        <activity android:name="com.firstapp.calculatorapp.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.firstapp.calculatorapp.SignUpActivity"></activity>
    </application>

</manifest>